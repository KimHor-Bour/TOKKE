<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardid"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/download"
                />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/profile"
                android:textColor="@color/colorBlack"
                android:text="hello"
                />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_marginStart="22dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/profile"
                android:text="TextView"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:padding="10dp"/>

            <TableLayout
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_marginTop="0dp"
                >

                <TableRow
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/bookdate"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Booking Date"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:paddingRight="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/booking_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                </TableRow>

                <TableRow
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/bookcode"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Booking Code"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:paddingRight="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/booking_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
                <TableRow
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/_type"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:paddingRight="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/tpye_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
                <TableRow
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/_payment"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:paddingRight="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/payment_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
                <TableRow
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/_price"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Deposit Price"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:paddingRight="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
            </TableLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>