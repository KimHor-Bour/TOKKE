<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background= "@drawable/border_radius_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorblurGrey">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //Appointment Detail
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_radius_top"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:id="@+id/tb1"
                        android:background="@drawable/border_bacground_white"
                        >
                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/appointment_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment Details"
                            android:textColor="@color/colorPurplePink"
                            android:textSize="20dp"
                            app:layout_constraintTop_toTopOf="@+id/tb1"
                            app:layout_constraintStart_toStartOf="@id/tb1"
                            android:gravity="left"/>

                        <ImageView
                            android:id="@+id/btn_cross"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/book_detail"
                            android:src="@drawable/ic_close_foreground"
                            app:layout_constraintEnd_toEndOf="@id/tb1"
                            app:layout_constraintTop_toTopOf="@id/tb1" />

                        <TextView
                            android:id="@+id/id_booking_doctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#123456"
                            android:textSize="12dp"
                            app:layout_constraintTop_toBottomOf="@id/appointment_detail"
                            app:layout_constraintStart_toStartOf="@id/tb1"/>
                        <TextView
                            android:id="@+id/date_booking"
                            app:layout_constraintStart_toStartOf="@id/tb1"
                            app:layout_constraintTop_toBottomOf="@id/id_booking_doctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Mon, 03/Agu/2020 4:57 PM"/>
                        <TextView
                            android:id="@+id/hospital_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/date_booking"
                            app:layout_constraintStart_toStartOf="@id/tb1"
                            android:text="Hospital Name"
                            android:textSize="18dp"
                            android:textColor="@color/colorPurplePink"
                            />
                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:id="@+id/image_doctor"
                            android:layout_marginTop="5dp"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:src="@drawable/doctorimage"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toBottomOf="@id/hospital_name"
                            app:layout_constraintStart_toStartOf="@id/tb1"/>
                        <TextView
                            android:padding="5dp"
                            android:id="@+id/name_doctor"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Dr.Kinh"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toEndOf="@id/image_doctor"
                            app:layout_constraintTop_toBottomOf="@id/hospital_name"/>
                        <TextView
                            android:padding="5dp"
                            android:id="@+id/skill"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill :"
                            android:textSize="12dp"
                            android:textColor="@color/colorGrey"
                            app:layout_constraintTop_toBottomOf="@id/name_doctor"
                            app:layout_constraintStart_toEndOf="@id/image_doctor"/>
                        <TextView
                            android:padding="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Doctor Skill"
                            android:textSize="12dp"
                            app:layout_constraintTop_toBottomOf="@id/name_doctor"
                            app:layout_constraintStart_toEndOf="@id/skill"
                            android:textColor="@color/colorBlack"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                //Comment
                <LinearLayout

                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bacground_white"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tb2"
                        android:layout_margin="8dp"
                        >
                        <TextView
                            android:id="@+id/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textColor="@color/colorPurplePink"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@+id/tb2"
                            app:layout_constraintStart_toStartOf="@id/tb2"
                            android:gravity="left"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/data_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="No comment"
                            android:textSize="13dp"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintTop_toBottomOf="@id/comment"
                            app:layout_constraintStart_toStartOf="@id/tb2"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                //Appointmet Date
                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bacground_white"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tb3"
                        android:layout_margin="8dp"
                        >
                        <TextView
                            android:id="@+id/start_end_date"
                            android:layout_width="365dp"
                            android:layout_height="wrap_content"
                            android:text="Appointment Date"
                            android:textColor="@color/colorPurplePink"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@+id/tb3"
                            app:layout_constraintStart_toStartOf="@id/tb3"
                            android:gravity="left"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Start Date :"
                            android:textSize="13dp"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintTop_toBottomOf="@id/start_end_date"
                            app:layout_constraintStart_toStartOf="@id/tb3"
                            />
                        <TextView
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/data_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Mon ,03/Aug/2020 04:57 PM"
                            android:textSize="13dp"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintEnd_toEndOf="@id/tb3"
                            app:layout_constraintTop_toBottomOf="@id/start_end_date"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                // Address
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bacground_white"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tb6"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/colorPurplePink"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@+id/tb6"
                            app:layout_constraintStart_toStartOf="@id/tb6"
                            />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/name_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Songeam Sela"
                            android:textSize="13dp"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintTop_toBottomOf="@id/address"
                            app:layout_constraintStart_toStartOf="@id/tb6"
                            />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="0123456"
                            android:textSize="13dp"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintTop_toBottomOf="@id/name_user"
                            app:layout_constraintStart_toStartOf="@id/tb6"
                            />
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_call"
                            app:layout_constraintStart_toEndOf="@id/phone_number"
                            app:layout_constraintTop_toBottomOf="@id/name_user"/>
                        <TextView
                            android:id="@id/add"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="718, Street SOS, Phnom Penh, Cambodia"
                            app:layout_constraintTop_toBottomOf="@id/phone_number"
                            app:layout_constraintStart_toStartOf="@id/tb6"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:text="Reject"
                android:id="@+id/btn_doctor_reject"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:background="@drawable/bacground_filter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPurplePink"
                />
            <Button
                android:layout_marginStart="20dp"
                android:layout_margin="10dp"
                android:text="Accept"
                android:id="@+id/btn_doctor_accept"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:background="@drawable/border_radius_green"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>