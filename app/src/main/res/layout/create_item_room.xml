<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurplePink"
            android:id="@+id/toolbar"
            android:gravity="center"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_tool"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/con_tool"
                    app:layout_constraintBottom_toBottomOf="@id/con_tool"
                    app:layout_constraintTop_toTopOf="@id/con_tool"
                    android:src="@drawable/ic_arrow_back"
                    />
                <TextView
                    android:id="@+id/txt_tool"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="MY ROOM"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/con_tool"
                    app:layout_constraintEnd_toEndOf="@id/con_tool"
                    app:layout_constraintTop_toTopOf="@id/con_tool"
                    app:layout_constraintBottom_toBottomOf="@id/con_tool"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:id="@+id/img_click_room"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/image_border_icon">

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorGrey">
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_table_number"
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Room Number"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF3333"

                        android:layout_alignRight="@id/txt_table_number"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/enter_room_roomname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Room Number"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_floor"
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Floor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF3333"
                        android:layout_alignRight="@id/txt_floor"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/enter_room_floor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Floor"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_eventprice"
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Max. of People"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF3333"
                        android:layout_alignRight="@id/txt_eventprice"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/enter_room_maxpeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Maximum of People"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_price"
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Price"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF3333"

                        android:layout_alignRight="@id/txt_price"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/enter_room_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Price"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Special Price"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/enter_room_specialprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Special price"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingEnd="10dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Deposit"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/enter_room_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Deposit"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bacground_white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingEnd="20dp"
                        android:gravity="left"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlack"
                        android:text="Description"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/enter_room_description"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="Enter Description"
                    android:textSize="14dp"
                    android:foregroundGravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_bg_pink">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="ADD ITEM"/>
    </LinearLayout>

</LinearLayout>