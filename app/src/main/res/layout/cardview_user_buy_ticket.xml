<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBuyTicket"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_shadow_coner"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgeUserEvent"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_profile"
                app:layout_constraintStart_toStartOf="@id/c3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/c3"
                app:layout_constraintEnd_toStartOf="@id/li3"/>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:id="@+id/li3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/c3"
                app:layout_constraintTop_toTopOf="@id/c3"
                app:layout_constraintStart_toEndOf="@id/imgeUserEvent"
                >
                <TextView
                    android:id="@+id/userEventDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorPurplePink"
                    android:hint="User Name"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/dateEventDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:hint="02/08/2020 11:22 PM"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:text="Ticket :"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:text="x"/>
                    <TextView
                        android:id="@+id/qtyTicket"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:hint="2"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/c3"
                app:layout_constraintTop_toTopOf="@id/c3"
                android:textColor="@color/colorRed"
                android:hint="$20"
                android:textColorHint="@color/colorRed"
                android:textSize="12dp"/>
<!--            <LinearLayout-->
<!--                android:layout_margin="5dp"-->
<!--                app:layout_constraintTop_toTopOf="@id/c3"-->
<!--                app:layout_constraintEnd_toEndOf="@id/c3"-->
<!--                android:paddingTop="5dp"-->
<!--                android:paddingBottom="5dp"-->
<!--                android:paddingStart="10dp"-->
<!--                android:paddingEnd="10dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/bacground_filter">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Refund"-->
<!--                    android:textColor="@color/colorPurplePink"-->
<!--                    android:textSize="10dp"/>-->
<!--            </LinearLayout>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>