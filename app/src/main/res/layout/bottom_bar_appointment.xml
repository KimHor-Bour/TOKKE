<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bottom_navigation"
        android:orientation="horizontal"
        android:id="@+id/linear_bottom_appoint"
        >

        <LinearLayout
            android:id="@+id/tab_dashboard_app"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/linear_bottom_appoint"
            app:layout_constraintStart_toStartOf="@id/linear_bottom_appoint"
            app:layout_constraintTop_toTopOf="@id/linear_bottom_appoint"
            app:layout_constraintEnd_toStartOf="@id/tab_shopping_app">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/dashboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Dashboard"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="@id/linear_bottom_appoint"
            app:layout_constraintBottom_toBottomOf="@id/linear_bottom_appoint"
            app:layout_constraintStart_toEndOf="@id/tab_dashboard_app"
            app:layout_constraintEnd_toStartOf="@id/tab_specialist_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/tab_shopping_app"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/appointment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Appointment"
                android:textSize="10dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="@id/linear_bottom_appoint"
            app:layout_constraintBottom_toBottomOf="@id/linear_bottom_appoint"
            app:layout_constraintStart_toEndOf="@id/tab_shopping_app"
            app:layout_constraintEnd_toStartOf="@id/tab_cupon_app"
            android:id="@+id/tab_specialist_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/doctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Specialist"
                android:textSize="10dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="@id/linear_bottom_appoint"
            app:layout_constraintBottom_toBottomOf="@id/linear_bottom_appoint"
            app:layout_constraintStart_toEndOf="@id/tab_specialist_app"
            app:layout_constraintEnd_toStartOf="@id/tab_account_app"
            android:id="@+id/tab_cupon_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/coupon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="My cupon"
                android:textSize="10dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toTopOf="@id/linear_bottom_appoint"
            app:layout_constraintBottom_toBottomOf="@id/linear_bottom_appoint"
            app:layout_constraintStart_toEndOf="@id/tab_cupon_app"
            app:layout_constraintEnd_toEndOf="@id/linear_bottom_appoint"
            android:id="@+id/tab_account_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Account"
                android:textSize="10dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>