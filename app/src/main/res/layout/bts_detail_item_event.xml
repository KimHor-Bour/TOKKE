<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_radius_top"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/border_radius_top"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                >
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/imageSlider_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_radius_bggrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Naome"
                                android:textColorHint="@color/colorBlack"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/shareDetailEvent"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="bottom"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/share"/>
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/c2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lTotal"
                            android:paddingTop="3dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="@id/c2"
                            app:layout_constraintTop_toTopOf="@id/c2"
                            app:layout_constraintBottom_toBottomOf="@id/c2"
                            app:layout_constraintEnd_toStartOf="@id/lAvailiable"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="Total Ticket :"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:paddingStart="5dp"
                                android:id="@+id/data_totalTicket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/design_default_color_primary"
                                android:textColorHint="@color/design_default_color_primary"
                                android:hint="1"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lAvailiable"
                            android:paddingTop="3dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="@id/c2"
                            app:layout_constraintBottom_toBottomOf="@id/c2"
                            app:layout_constraintStart_toEndOf="@id/lTotal"
                            app:layout_constraintEnd_toStartOf="@id/lSold"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="Sold Ticket :"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:paddingStart="5dp"
                                android:id="@+id/data_soldTicket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/colorRed"
                                android:hint="1"
                                android:textColorHint="@color/colorRed"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lSold"
                            android:paddingTop="3dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toEndOf="@id/lAvailiable"
                            app:layout_constraintTop_toTopOf="@id/c2"
                            app:layout_constraintBottom_toBottomOf="@id/c2"
                            app:layout_constraintEnd_toEndOf="@id/c2"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="Availiable Ticket :"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:paddingStart="5dp"
                                android:id="@+id/data_availibleTicket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="@color/colorGreen"
                                android:textColorHint="@color/colorGreen"
                                android:hint="1"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/detail_eventName"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:textSize="16dp"
                />
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Start Date :"/>
                <TextView
                    android:id="@+id/detail_eventStartDate"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="start date"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="End Date :"/>
                <TextView
                    android:id="@+id/detail_eventEndDate"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="end date"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Price :"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="price"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Special Price :"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="price"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/detail_event_description"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey_radius"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating and Review"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"/>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right_circle"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RatingBar
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="0"
                        android:numStars="5"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        />
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="(0 reviews)"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/clickStatus"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius_bg_purplepink">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</LinearLayout>