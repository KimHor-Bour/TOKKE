<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/t"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/t1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_margin="10dp"
            android:id="@+id/filterbtntype"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bacground_filter"
            android:orientation="horizontal">
            <ImageView
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_filter_foreground"
                />
            <TextView
                android:id="@+id/type_status"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_time_picker"
            android:background="@drawable/border_shadow_coner"
            android:elevation="2.0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_selecteddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Date and Time"/>
            <ImageView
                android:layout_marginStart="50dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_down_foreground"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t">

        <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:id="@+id/my_restatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:spanCount="3"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>